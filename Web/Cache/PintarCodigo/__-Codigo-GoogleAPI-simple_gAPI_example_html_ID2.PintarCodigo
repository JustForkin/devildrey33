<div class='Codigo_Marco' id='ID2'><div class='Codigo_Titulo'>Simple request method</div><div class='Codigo_Numeracion'>1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10<br>11<br></div><pre class='Codigo_PRECodigo'><div l=1><span class='TxtNegro'><span class='TxtAzul'>function</span> method_1_request() {</span></div><div l=2><span class='TxtNegro'>    <span class='TxtLila'>$</span>(<span class='TxtAmarillo'>'body'</span>).append(<span class='TxtAmarillo'>'&lt;p&gt;Drive API direct request has been launched&lt;/p&gt;'</span>);</span></div><div l=3><span class='TxtNegro'>    <span class='TxtAzul'>var</span> restRequest = gapi.client.request({</span></div><div l=4><span class='TxtNegro'>            <span class='TxtAmarillo'>'path'</span>    : <span class='TxtAmarillo'>'https://www.googleapis.com/drive/v2/files'</span>,</span></div><div l=5><span class='TxtNegro'>            <span class='TxtAmarillo'>'method'</span>  : <span class='TxtAmarillo'>'GET'</span>,</span></div><div l=6><span class='TxtNegro'>            <span class='TxtAmarillo'>'params'</span>  : {<span class='TxtAmarillo'>'maxResults'</span>: <span class='TxtRojo'>10</span>, <span class='TxtAmarillo'>'q'</span> : <span class='TxtAmarillo'>'trashed=false'</span> }</span></div><div l=7><span class='TxtNegro'>        });</span></div><div l=8><span class='TxtNegro'>    restRequest.then(</span></div><div l=9><span class='TxtNegro'>        <span class='TxtAzul'>function</span>(resp)   { load_result(resp.result); },                         <span class='TxtGris'>// Success function</span></span></div><div l=10><span class='TxtNegro'>        <span class='TxtAzul'>function</span>(reason) { <span class='TxtLila'>$</span>(<span class='TxtAmarillo'>'body'</span>).append(<span class='TxtAmarillo'>'&lt;p&gt;There was an ERROR!&lt;/p&gt;'</span>); });  <span class='TxtGris'>// Error function</span></span></div><div l=11><span class='TxtNegro'>}</span></div></pre></div>