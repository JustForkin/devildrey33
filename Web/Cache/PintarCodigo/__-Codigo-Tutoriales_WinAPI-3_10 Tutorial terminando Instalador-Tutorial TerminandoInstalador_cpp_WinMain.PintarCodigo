<div class='Codigo_Marco' id='IDWinMain'><div class='Codigo_Titulo'>Archivo : Tutorial TerminandoInstalador.cpp</div><div class='Codigo_Numeracion'>1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10<br>11<br>12<br>13<br>14<br>15<br>16<br>17<br>18<br>19<br>20<br>21<br>22<br>23<br>24<br>25<br>26<br>27<br></div><pre class='Codigo_PRECodigo'><div l=1><span class='TxtNegro'><span class='TxtVerde'>// WinMain</span></span></div><div l=2><span class='TxtNegro'><span class='TxtAzul'>int</span> APIENTRY WinMain(HINSTANCE hInstance, </span></div><div l=3><span class='TxtNegro'>                     HINSTANCE hPrevInstance, </span></div><div l=4><span class='TxtNegro'>                     LPSTR lpCmdLine, </span></div><div l=5><span class='TxtNegro'>                     <span class='TxtAzul'>int</span> nCmdShow) {</span></div><div l=6><span class='TxtNegro'>    <span class='TxtVerde'>// Comprobamos si el usuario es administrador</span></span></div><div l=7><span class='TxtNegro'>    <span class='TxtVerde'>// NO ES ADMINISTRADOR</span></span></div><div l=8><span class='TxtNegro'>    <span class='TxtAzul'>if</span> (IsUserAnAdmin() == FALSE) { </span></div><div l=9><span class='TxtNegro'>        <span class='TxtAzul'>int</span>        TotalArgs    = <span class='TxtRojo'>0</span>;</span></div><div l=10><span class='TxtNegro'>        TCHAR **Args        = CommandLineToArgvW(GetCommandLine(), &TotalArgs);</span></div><div l=11><span class='TxtNegro'>        <span class='TxtVerde'>// Ejecutamos el instalador de forma que pida privilegios de administrador</span></span></div><div l=12><span class='TxtNegro'>        ShellExecute(NULL, TEXT(<span class='TxtRojo'>"RunAs"</span>), Args[<span class='TxtRojo'>0</span>], NULL, NULL, SW_SHOWNORMAL);</span></div><div l=13><span class='TxtNegro'>        LocalFree(Args);</span></div><div l=14><span class='TxtNegro'>    }</span></div><div l=15><span class='TxtNegro'>    <span class='TxtVerde'>// ES ADMINISTRADOR</span></span></div><div l=16><span class='TxtNegro'>    <span class='TxtAzul'>else</span> {                            </span></div><div l=17><span class='TxtNegro'>        <span class='TxtVerde'>// El programa se ha arrancado con privilegios de administrador,</span></span></div><div l=18><span class='TxtNegro'>        <span class='TxtVerde'>// mostramos la ventana de instalaci√≥n</span></span></div><div l=19><span class='TxtNegro'>        VentanaInstalador Ventana;</span></div><div l=20><span class='TxtNegro'>        MSG Mensaje;</span></div><div l=21><span class='TxtNegro'>        <span class='TxtAzul'>while</span> (TRUE == GetMessage(&Mensaje, NULL, <span class='TxtRojo'>0</span>, <span class='TxtRojo'>0</span>)) {</span></div><div l=22><span class='TxtNegro'>            TranslateMessage(&Mensaje);                     </span></div><div l=23><span class='TxtNegro'>            DispatchMessage(&Mensaje); </span></div><div l=24><span class='TxtNegro'>        }</span></div><div l=25><span class='TxtNegro'>    }</span></div><div l=26><span class='TxtNegro'>    <span class='TxtAzul'>return</span> <span class='TxtRojo'>0</span>;</span></div><div l=27><span class='TxtNegro'>}</span></div></pre></div>