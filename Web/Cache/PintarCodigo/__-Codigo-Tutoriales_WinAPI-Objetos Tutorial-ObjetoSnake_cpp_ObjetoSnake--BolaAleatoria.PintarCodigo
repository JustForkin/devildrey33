<div class='Codigo_Marco' id='IDBolaAleatoria'><div class='Codigo_Titulo'>Archivo : ObjetoSnake.cpp</div><div class='Codigo_Numeracion'>1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10<br>11<br>12<br>13<br>14<br>15<br>16<br>17<br>18<br>19<br>20<br></div><pre class='Codigo_PRECodigo'><div l=1><span class='TxtNegro'><span class='TxtVerde'>// -Función que retorna una posición que este libre para una bola</span></span></div><div l=2><span class='TxtNegro'>POINT ObjetoSnake::BolaAleatoria(<span class='TxtAzul'>void</span>) {</span></div><div l=3><span class='TxtNegro'>    <span class='TxtAzul'>bool</span> BolaValida = <span class='TxtAzul'>false</span>;</span></div><div l=4><span class='TxtNegro'>    POINT R;</span></div><div l=5><span class='TxtNegro'>    <span class='TxtVerde'>// Mientras la bola no este en una posicion valida...</span></span></div><div l=6><span class='TxtNegro'>    <span class='TxtAzul'>while</span> (BolaValida == <span class='TxtAzul'>false</span>) {</span></div><div l=7><span class='TxtNegro'>        R.x = (rand()%(Nivel.AnchoTablero -<span class='TxtRojo'>1</span>)) +<span class='TxtRojo'>1</span>;</span></div><div l=8><span class='TxtNegro'>        R.y = (rand()%(Nivel.AltoTablero -<span class='TxtRojo'>1</span>)) +<span class='TxtRojo'>1</span>;</span></div><div l=9><span class='TxtNegro'>        BolaValida = <span class='TxtAzul'>true</span>;</span></div><div l=10><span class='TxtNegro'>        <span class='TxtVerde'>// Miramos si la bola esta en una posición donde hay una porción de la serpiente</span></span></div><div l=11><span class='TxtNegro'>        <span class='TxtAzul'>for</span> (size_t i = <span class='TxtRojo'>0</span>; i &lt; Tablero-&gt;Serpiente.size(); i++) {</span></div><div l=12><span class='TxtNegro'>            <span class='TxtAzul'>if</span> (R.x == Tablero-&gt;Serpiente[i].x && R.y == Tablero-&gt;Serpiente[i].y) BolaValida = <span class='TxtAzul'>false</span>;</span></div><div l=13><span class='TxtNegro'>        }</span></div><div l=14><span class='TxtNegro'>        <span class='TxtVerde'>// Miramos si la bola esta en una posición donde hay una porción del muro</span></span></div><div l=15><span class='TxtNegro'>        <span class='TxtAzul'>for</span> (size_t i = <span class='TxtRojo'>0</span>; i &lt; Tablero-&gt;Muro.size(); i++) {</span></div><div l=16><span class='TxtNegro'>            <span class='TxtAzul'>if</span> (R.x == Tablero-&gt;Muro[i].x && R.y == Tablero-&gt;Muro[i].y) BolaValida = <span class='TxtAzul'>false</span>;</span></div><div l=17><span class='TxtNegro'>        }</span></div><div l=18><span class='TxtNegro'>    }</span></div><div l=19><span class='TxtNegro'>    <span class='TxtAzul'>return</span> R;</span></div><div l=20><span class='TxtNegro'>}</span></div></pre></div>