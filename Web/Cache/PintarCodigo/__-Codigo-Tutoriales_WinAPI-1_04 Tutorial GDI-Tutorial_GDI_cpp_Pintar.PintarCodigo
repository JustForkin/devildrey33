<div class='Codigo_Marco' id='IDPintar'><div class='Codigo_Titulo'>Archivo : Tutorial_GDI.cpp</div><div class='Codigo_Numeracion'>1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10<br>11<br>12<br>13<br>14<br></div><pre class='Codigo_PRECodigo'><div l=1><span class='TxtNegro'>                <span class='TxtVerde'>// Función que pinta el fondo de un color aleatorio con un texto de color blanco</span></span></div><div l=2><span class='TxtNegro'>  <span class='TxtAzul'>void</span>          Pintar(HDC hDC) {</span></div><div l=3><span class='TxtNegro'>                    COLORREF R = rand()%255;</span></div><div l=4><span class='TxtNegro'>                    COLORREF G = rand()%255;</span></div><div l=5><span class='TxtNegro'>                    COLORREF B = rand()%255;</span></div><div l=6><span class='TxtNegro'>                    HBRUSH Brocha = CreateSolidBrush(RGB(R, G, B));</span></div><div l=7><span class='TxtNegro'>                    RECT   RC;</span></div><div l=8><span class='TxtNegro'>                    GetClientRect(_hWnd, &RC);</span></div><div l=9><span class='TxtNegro'>                    FillRect(hDC, &RC, Brocha);</span></div><div l=10><span class='TxtNegro'>                    SetTextColor(hDC, RGB(<span class='TxtRojo'>255</span>, <span class='TxtRojo'>255</span>, <span class='TxtRojo'>255</span>));</span></div><div l=11><span class='TxtNegro'>                    SetBkColor(hDC, RGB(R, G, B));</span></div><div l=12><span class='TxtNegro'>                    DrawText(hDC, TEXT(<span class='TxtRojo'>"Ejemplo 1.4 - Entorno gráfico de windows (GDI)"</span>), -<span class='TxtRojo'>1</span>, &RC, DT_CENTER);</span></div><div l=13><span class='TxtNegro'>                    DeleteObject(Brocha);</span></div><div l=14><span class='TxtNegro'>                };</span></div></pre></div>