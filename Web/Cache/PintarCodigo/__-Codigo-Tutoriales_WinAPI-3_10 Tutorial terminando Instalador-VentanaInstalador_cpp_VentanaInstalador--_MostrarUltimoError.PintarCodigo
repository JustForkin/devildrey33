<div class='Codigo_Marco' id='ID_MostrarUltimoError'><div class='Codigo_Titulo'>Archivo : VentanaInstalador.cpp</div><div class='Codigo_Numeracion'>1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10<br>11<br>12<br>13<br>14<br>15<br>16<br>17<br>18<br></div><pre class='Codigo_PRECodigo'><div l=1><span class='TxtNegro'><span class='TxtVerde'>// Función para mostrar el ultimo error con FormatMessage añadiendo un texto personalizado</span></span></div><div l=2><span class='TxtNegro'><span class='TxtAzul'>void</span> VentanaInstalador::_MostrarUltimoError(<span class='TxtAzul'>const</span> TCHAR *Mensaje) {</span></div><div l=3><span class='TxtNegro'>    DWORD  ErrNum = GetLastError();</span></div><div l=4><span class='TxtNegro'>    LPVOID lpMsgBuf;</span></div><div l=5><span class='TxtNegro'>    <span class='TxtAzul'>if</span> (ErrNum == <span class='TxtRojo'>0</span>) <span class='TxtAzul'>return</span>;</span></div><div l=6><span class='TxtNegro'>    FormatMessage( FORMAT_MESSAGE_ALLOCATE_BUFFER | FORMAT_MESSAGE_FROM_SYSTEM | FORMAT_MESSAGE_IGNORE_INSERTS, </span></div><div l=7><span class='TxtNegro'>                   NULL, ErrNum, MAKELANGID(LANG_NEUTRAL, SUBLANG_DEFAULT), (LPTSTR) &lpMsgBuf, <span class='TxtRojo'>0</span>, NULL );</span></div><div l=8><span class='TxtNegro'>    <span class='TxtAzul'>if</span> (Mensaje == NULL) {</span></div><div l=9><span class='TxtNegro'>        MessageBox(NULL, (LPCTSTR)lpMsgBuf, TEXT(<span class='TxtRojo'>"Error!"</span>), MB_OK | MB_ICONINFORMATION);</span></div><div l=10><span class='TxtNegro'>    }</span></div><div l=11><span class='TxtNegro'>    <span class='TxtAzul'>else</span> {</span></div><div l=12><span class='TxtNegro'>        TCHAR Buffer[<span class='TxtRojo'>2048</span>];</span></div><div l=13><span class='TxtNegro'>        wsprintf(Buffer, TEXT(<span class='TxtRojo'>"%s\n%s"</span>), Mensaje, (LPCTSTR)lpMsgBuf);</span></div><div l=14><span class='TxtNegro'>        MessageBox(NULL, Buffer, TEXT(<span class='TxtRojo'>"Error"</span>), MB_OK | MB_ICONINFORMATION);</span></div><div l=15><span class='TxtNegro'>    }</span></div><div l=16><span class='TxtNegro'></span></div><div l=17><span class='TxtNegro'>    LocalFree(lpMsgBuf);</span></div><div l=18><span class='TxtNegro'>}</span></div></pre></div>